# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.define "vm1" do |vm1|
    vm1.vm.box = "generic/ubuntu2204"
    vm1.vm.hostname = "ubuntu"
    vm1.vm.network :forwarded_port, guest: 80, host: 8080, host_ip: "127.0.0.1"
    vm1.vm.synced_folder "./files", "/vagrant_files"
  end

  config.vm.provider "vmware_desktop" do |vb|
    vb.gui = true
    vb.memory = 4096
    vb.cpus = 4
  end

  config.vm.provision "shell", path: "files/install.nginx.sh"
  config.vm.provision "shell", path: "files/install.net-tools.sh"

end
